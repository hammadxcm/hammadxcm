---
import { config } from '@config/index';
import { themeMetaColors } from '@config/theme-colors';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
const theme = config.site.theme || 'hacker';
const siteUrl = config.site.url.replace(/\/$/, '');
---

<!DOCTYPE html>
<html lang="en" data-theme={theme}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={siteUrl}>
  <meta name="theme-color" content={themeMetaColors[theme] || '#0D1117'}>

  <!-- Favicon -->
  <link rel="icon" href={`${base}favicon.svg`} type="image/svg+xml">

  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={siteUrl}>
  <meta property="og:image" content={`${siteUrl}/og-image.png`}>

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={`${siteUrl}/og-image.png`}>

  <!-- Fonts (self-hosted, no external requests) -->
  <link rel="preload" href={`${base}fonts/inter-latin.woff2`} as="font" type="font/woff2" crossorigin>
  <link rel="preload" href={`${base}fonts/firacode-latin.woff2`} as="font" type="font/woff2" crossorigin>

  <!-- Blocking theme script â€” prevents flash of wrong theme -->
  <script is:inline>
    (function() {
      var saved = localStorage.getItem('portfolio-theme');
      if (saved) document.documentElement.setAttribute('data-theme', saved);
    })();
  </script>

  <!-- JSON-LD Person schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": config.site.name,
    "jobTitle": config.site.title,
    "url": siteUrl,
    "sameAs": config.socials.map(s => s.url),
  })} />
</head>
<body>
  <!-- Skip link for accessibility -->
  <a href="#about" class="skip-link">Skip to content</a>
  <slot />
  <!-- All scripts as single bundled module (Vite handles bundling + minification) -->
  <script src="../scripts/main.ts"></script>
</body>
</html>

<style is:global lang="scss">
  @use '../styles/global';
</style>
