---
import { config } from '@config/index';
import Layout from '../layouts/Layout.astro';
import GlobalOverlays from '@components/GlobalOverlays.astro';
import Nav from '@components/Nav.astro';
import Hero from '@components/Hero.astro';
import About from '@components/About.astro';
import TechArsenal from '@components/TechArsenal.astro';
import Journey from '@components/Journey.astro';
import Projects from '@components/Projects.astro';
import Analytics from '@components/Analytics.astro';
import Certifications from '@components/Certifications.astro';
import Footer from '@components/Footer.astro';
---

<Layout
  title={`${config.site.name} | ${config.site.title}`}
  description={config.site.description}
>
  <!-- Boot Sequence Overlay -->
  <div id="bootScreen" class="boot-screen" data-welcome={config.boot.welcomeName} data-name={config.site.name}>
    <div class="boot-lines" id="bootLines"></div>
  </div>

  <GlobalOverlays />
  <Nav />
  <Hero />

  <About />
  <div class="section-separator"><div class="sep-line"></div></div>

  <TechArsenal />
  <div class="section-separator"><div class="sep-line"></div></div>

  <Journey />
  <div class="section-separator"><div class="sep-line"></div></div>

  <Projects />
  <div class="section-separator"><div class="sep-line"></div></div>

  <Analytics />
  <div class="section-separator"><div class="sep-line"></div></div>

  <Certifications />

  <Footer />
</Layout>
