---
import SocialLinks from './SocialLinks.astro';
---

<!-- ══════ HERO ══════ -->
<section id="hero">
  <canvas id="particle-canvas"></canvas>
  <canvas id="matrix-canvas"></canvas>
  <div class="hacker-log" id="hackerLog"></div>
  <div class="hero-grid-layer"></div>
  <div class="hero-shapes-layer">
    <div class="geo-shape geo-shape--circle"></div>
    <div class="geo-shape geo-shape--triangle"></div>
    <div class="geo-shape geo-shape--diamond"></div>
    <div class="geo-shape geo-shape--circle"></div>
    <div class="geo-shape geo-shape--triangle"></div>
  </div>
  <div class="hero-content">
    <p class="hero-greeting">root@kali:~# whoami</p>
    <h1 class="hero-name" id="heroName" data-text="Hammad Khan">
      <span class="hero-name-inner" id="heroNameInner">Hammad Khan</span>
    </h1>
    <div class="hero-typewriter">
      <span class="typewriter-text" id="typewriter"></span>
      <span class="typewriter-cursor"></span>
    </div>
    <div class="hero-socials">
      <SocialLinks />
    </div>
  </div>
  <div class="scroll-indicator">
    <div class="scroll-mouse"></div>
    <span>SCROLL</span>
  </div>
</section>
