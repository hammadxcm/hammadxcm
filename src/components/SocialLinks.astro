{config.socials.map((social) => (
  <a href={social.url} target="_blank" rel="noopener" class="social-btn" aria-label={social.label}>
    <Fragment set:html={svgMap[social.platform]} />
  </a>
))}

<style lang="scss">
  @use '../styles/mixins' as *;

  .social-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px; height: 48px;
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
    background: var(--glass-bg);
    color: var(--text-dim);
    font-size: 1.2rem;
    transition: all var(--duration-normal);

    &:hover {
      border-color: var(--accent);
      color: var(--accent);
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(var(--accent-glow), 0.2);
    }

    :global(svg) {
      width: 22px; height: 22px;
      fill: currentColor;
    }

    @include respond-to(mobile) { width: 44px; height: 44px; }
  }
</style>
